<h1>Angular Portfolio Items</h1>

<%= link_to "Create New Item", new_portfolio_path if logged_in?(:site_admin) %>

<% @angular_portfolios.each do |num| %>
<p><%= link_to num.title, portfolio_show_path(num.id) %></p>
<p><%= num.subtitle %></p>
<p><%= num.body %></p>
<%= image_tag num.thumbImage if !num.thumbImage.nil? %>
<%= link_to "Edit", edit_portfolio_path(num.id) if logged_in?(:site_admin) %>
<%= link_to 'Delete Portfolio Item', portfolio_path(num.id), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin)%>
<% end %>