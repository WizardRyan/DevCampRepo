<div class="container">
  <div class="row">
    
    <div class="col-md-7">
      <%= image_tag @portfolio_item.mainImage if !@portfolio_item.nil? %>

    </div>
    
    <div class="col-md-5">
      <h1><%= @portfolio_item.title %></h1>
      
      <hr>
      
      <em><%= @portfolio_item.subtitle %></em>
      <p><%= @portfolio_item.body %></p>
      
      <hr>
      
      <h3>Technologies Used:</h3>
      
      <% @portfolio_item.technologies.each do |d| %>
      <p><%= d.name %></p>
      <% end %>

    </div>
    
  </div>
</div>
