<%= form_for(@portfolio_item) do |f| %>
  <% if @portfolio_item.errors.any? %>
    <% @portfolio_item.errors.full_messages.each do |error| %>
       <%= alert_gen error %>
    <% end %>
  <% end %>

  <div class="row">
    <div class="col-md-6">
       <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
       </div>
  
       <div class="form-group">
        <%= f.label :subtitle %>
        <%= f.text_field :subtitle, class: 'form-control' %>
       </div>
       
       <div class="form-group">
         <label class="btn btn-primary btn-block">
           Upload main image <%= f.file_field :mainImage, style: 'display:none;' %>
         </label>
       </div>
       
       <div class="form-group">
         <label class="btn btn-primary btn-block">
           Upload thumb image <%= f.file_field :thumbImage, style: 'display:none;' %>
         </label>
       </div>
       
    </div>
    
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: 'form-control', rows: 12 %>
      </div>
    </div>
    
  </div>

 
  <hr>
  
  <div class="col-md-12">
    <h3>Technologies Used:</h3>
    <div>
      <%= f.fields_for :technologies do |x| %>
      <%= render 'technology_fields', f: x %>
      <% end %>
      
      <div>
        <%= link_to_add_association 'Add Technology', f, :technologies %>
      </div>
    </div>
    
    <div class="form-group">
    <%= f.submit 'Save Portfolio Item', class: 'btn btn-primary btn-block' %>
    </div>
  </div>

  

  
<% end %>
